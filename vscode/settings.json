{
  // visuals
  "workbench.colorTheme": "BeardedTheme Purple",
  "workbench.iconTheme": "material-icon-theme",
  "editor.detectIndentation": true,
  "editor.formatOnSave": true,
  "window.zoomLevel": 0,
  "terminal.integrated.fontSize": 13,
  "editor.fontFamily": "'JetBrains Mono'",
  "editor.fontLigatures": true,
  "window.menuBarVisibility": "toggle",
  "editor.wrappingIndent": "deepIndent",
  "editor.wordWrap": "on",
  "bracket-pair-colorizer-2.colors": ["Orange", "Salmon", "Orchid", "Pink"],
  // vim / editing
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "vim.cursorStylePerMode.normal": "block",
  "editor.lineNumbers": "relative",
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    // Home moves to first character
    {
      "before": ["<Home>"],
      "after": ["^"]
    },
    // delete without copying
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d"]
    },
    // easymotion search with one press
    {
      "before": ["m"],
      "after": ["<leader>", "<leader>", "s"]
    }
  ],
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-w>": false,
    "<C-f>": false,
    "<C-q>": false,
    "<C-z>": false,
    "<C-y>": false,
    "<C-b>": false
  },
  "vim.easymotion": true,
  "vim.leader": "<Space>",
  "vim.easymotionMarkerBackgroundColor": "#bada55",
  "vim.easymotionKeys": ".,xcbdgkhjvmwfprstyulien",
  // git
  "git.confirmSync": false,
  "git.ignoreLegacyWarning": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  // rust
  "rust-analyzer.inlayHints.typeHints": false,
  "rust-analyzer.inlayHints.chainingHints": false,
  // discord
  "discord.detailsEditing": "{dirname}/{filename}",
  "discord.lowerDetailsEditing": "in {workspace}",
  "discord.lowerDetailsIdle": "{null}",
  "discord.lowerDetailsNotFound": "{null}",
  "discord.detailsDebugging": "{dirname}/{filename}",
  "discord.lowerDetailsDebugging": "in {workspace}",
  "discord.detailsIdle": "Idle",
  "discord.largeImageIdle": "Idle",
  "discord.workspaceElapsedTime": true,
  // misc
  "extensions.autoUpdate": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "debug.allowBreakpointsEverywhere": true,
  "update.mode": "none",
  "editor.cursorSurroundingLines": 10,
  "workbench.panel.defaultLocation": "right",
  "editor.minimap.renderCharacters": false,
  "prettier.proseWrap": "always",
  "latex-workshop.view.pdf.viewer": "tab",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
